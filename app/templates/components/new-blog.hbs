
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title"}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author"}}
  </div>

  <div class="form-group">
    <label for="content">Content</label><br>
    <textarea rows='15' cols='50'>{{input value=content id="content"}}</textarea>
  </div>

  <div class="form-group">
    <label for="storelink">Storelink</label>
    {{input value=storelink id="storelink"}}
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    {{input value=image id="image"}}
  </div>

  <button {{action 'save'}}>Save</button>
</form>
